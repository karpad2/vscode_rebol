{
	"name": "rebol",
	"displayName": "Rebol",
	"description": "Syntax Coloring, Intellisense, Snippets and more",
	"version": "0.1.8",
	"publisher": "karpad2",
	"license": "MIT License",
	"files.encoding": "any encoding",
	"homepage": "https://github.com/karpad2/vscode_rebol/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/karpad2/vscode_rebol"
	},
	"bugs": {
		"url": "https://github.com/karpad2/vscode_rebol/issues"
	},
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.48.0"
	},
	"extensionKind": [
		"workspace"
	  ],
	"categories": [
		"Programming Languages",
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"onLanguage:rebol",
		"onLanguage:REBOL",
		"onLanguage:Rebol",
		"workspaceContains:**/*.sc"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "rebol",
				"aliases": [
					"REBOL",
					"rebol"
				],
				"extensions": [
					".sc"
				],
				"configuration": "./rebol.configuration.json"
			}
		],
		"snippets": [
			{
			  "language": "rebol",
			  "path": "./snippets/rebol.json"
			}
		  ],
		"grammars": [
			{
				"language": "rebol",
				"scopeName": "source.sc",
				"path": "./syntaxes/Rebol.tmLanguage.json"
			}

		
		],
		"commands": [],
		"keybindings": [
			{
				"command": "rebol.interpret",
				"key": "F6"
			}
		],
		"menus": {
			"editor/context": [],
			"explorer/context": []
		},
		"configuration": {
			"type": "object",
			"title": "Rebol Configuration",
			"properties": {
				
			}
		},
		"configurationDefaults": {
			"[rebol]": {
				"editor.semanticHighlighting.enabled": true,
				"files.encoding": "windows1250",
				"files.autoGuessEncoding": true,
				"editor.tabSize": 2,
				"editor.insertSpaces": true,
				"editor.detectIndentation": false
				}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.3",
		"@types/node": "^14.6.2",
		"@types/vscode": "^1.48.0",
		"@typescript-eslint/eslint-plugin": "^3.10.1",
		"@typescript-eslint/parser": "^3.10.1",
		"eslint": "^7.28.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"vscode-languageclient": "^6.1.3"
	}
}
