{
	"windowscharchode": 1250,
	"name": "rebol",
	"displayName": "Rebol",
	"description": "Syntax Coloring, Intellisense, Snippets and more",
	"version": "0.0.1",
	"publisher": "karpad2",
	"license": "MIT License",
	"files.encoding": "any encoding",
	"homepage": "https://github.com/karpad2/vscode_rebol/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/karpad2/vscode_rebol"
	},
	"bugs": {
		"url": "https://github.com/karpad2/vscode_rebol/issues"
	},
	"icon": "images/icon.png",
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"onLanguage:rebol",
		"onLanguage:REBOL"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "Rebol",
				"aliases": [
					"Rebol",
					"rebol"
				],
				"extensions": [
					".sc"
				],
				"configuration": "./rebol.configuration.json"
			}
		],
		"grammars": [
			{
				"language": "rebol",
				"scopeName": "source.sc",
				"path": "./syntaxes/Rebol.tmLanguage.json"
			}
		],
		"commands": [],
		"keybindings": [
			{
				"command": "rebol.interpret",
				"key": "F6"
			}
		],
		"menus": {
			"editor/context": [],
			"explorer/context": []
		},
		"configuration": {
			"type": "object",
			"title": "Rebol Configuration",
			"properties": {
				"rebol.rebolPath": {
					"type": "string",
					"default": "",
					"description": "Path to rebol toolchain"
				},
				"rebol.excludedPath": {
					"type": "string",
					"default": "tests/",
					"description": "sub-folders be excluded"
				},
				"rebol.buildDir": {
					"type": "string",
					"default": "",
					"description": "Directory to put compiling result of rebol Source file. If not set, use workspace root directory by default."
				},
				"rebol.devOptions": {
					"type": "array",
					"default": [],
					"description": "Advanced options used to enable new features or produce detailed diagnostics to identify extension issues."
				},
				"rebol.intelligence": {
					"type": "boolean",
					"default": true,
					"description": "Whether to enable or disable intelligence."
				},
				"rebol.rls-debug": {
					"type": "boolean",
					"default": false,
					"description": "Whether to enable or disable 'rebol language server' debug."
				},
				"rebol.server.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.3",
		"@types/node": "^14.6.2",
		"@types/vscode": "^1.48.0",
		"@typescript-eslint/eslint-plugin": "^3.10.1",
		"@typescript-eslint/parser": "^3.10.1",
		"eslint": "^7.28.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"vscode-languageclient": "^6.1.3"
	}
}
