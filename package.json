{
	"name": "rebol",
	"displayName": "Rebol",
	"description": "Syntax Coloring, Intellisense, Snippets and more",
	"version": "0.1.34",
	"publisher": "karpad2",
	"license": "MIT License",
	"files.encoding": "any encoding",
	"homepage": "https://github.com/karpad2/vscode_rebol/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/karpad2/vscode_rebol"
	},
	"galleryBanner": {
		"color": "#333333",
		"theme": "dark"
	},
	"bugs": {
		"url": "https://github.com/karpad2/vscode_rebol/issues"
	},
	"icon": "images/icon.png",
	"iconThemes": [
		{
			"id": "rebol",
			"path": "./theme/icon-theme.json"
		}
	],
	"engines": {
		"vscode": "^1.48.0"
	},
	"extensionKind": [
		"workspace",
		"ui"
	],
	"categories": [
		"Programming Languages",
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"onLanguage:rebol",
		"onLanguage:REBOL",
		"onLanguage:Rebol",
		"workspaceContains:**/*.sc",
		"onView:rebolExplorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "rebol",
				"aliases": [
					"REBOL",
					"rebol",
					"Rebol"
				],
				"extensions": [
					".sc"
				],
				"configuration": "./rebol.configuration.json"
			}
		],
		"commands": [],
		"menus": {
			"view/title": []
		},
		"snippets": [
			{
				"language": "rebol",
				"path": "./snippets/rebol.json"
			}
		],
		"grammars": [
			{
				"language": "rebol",
				"scopeName": "source.sc",
				"path": "./syntaxes/Rebol.tmLanguage.json",
				"embeddedLanguages": {
					"source.sql": "sql"
				}
			}
		],
		"keybindings": [],
		"configuration": {
			"type": "object",
			"title": "Rebol Configuration",
			"properties": {}
		},
		"semanticTokenTypes": [
			{
				"id": "annotation",
				"superType": "type",
				"description": "Style for annotations."
			},
			{
				"id": "annotationMember",
				"superType": "function",
				"description": "Style for annotation members."
			},
			{
				"id": "modifier",
				"superType": "keyword",
				"description": "Style for modifier keywords."
			}
		],
		"views": {
			"explorer": []
		},
		"configurationDefaults": {
			"[rebol]": {
				"editor.semanticHighlighting.enabled": true,
				"files.encoding": "windows1250",
				"files.autoGuessEncoding":false,
				"editor.tabSize": 2,
				"editor.insertSpaces": true,
				"editor.detectIndentation": false,
				"editor.suggestSelection": "recentlyUsed",
				"editor.wordBasedSuggestions": true,
				"editor.suggestOnTriggerCharacters": true
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.3",
		"@types/node": "^14.6.2",
		"@types/vscode": "^1.48.0",
		"@typescript-eslint/eslint-plugin": "^3.10.1",
		"@typescript-eslint/parser": "^3.10.1",
		"eslint": "^7.28.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"vscode-languageclient": "^6.1.3"
	}
}
